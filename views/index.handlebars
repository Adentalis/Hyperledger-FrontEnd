<h1 class="text-center mb-3">{{title}}</h1>
<a id="updateButton" href="/" class="btn btn-light mt-4">Update All Lists</a>

<div class="grid">
  <div class = "cars">
    <h2>CARS</h2>
    <!--  GET ALL CARS -->
    <form action="/cars" method="GET" class="mb-4">
      <input type="submit" value="GET-ALL-CARS (Works)">
    </form>

    <!-- SHOW ALL CARS IN LIST-->
    <ul class="list-group">
      {{#each cars}}
      <li class="list-group-item">carId:{{this.id}} - borrowId:{{this.borrowId}} - km:{{this.km}}</li>
      {{/each}}
    </ul>

    <!--  CREATE A CAR - THIS WORKS  	-->
    <form action="/cars" method="POST" class="mb-4">
      <!--  NAME  	-->
      <div class="form-group">
        <label for="id">ID</label>
        <input type="text" name="id" class="form-control">
      </div>
      <div class="form-group">
        <label for="km">KM</label>
        <input type="text" name="km" class="form-control">
      </div>
      <!--  EMAIL  	-->
      <div class="form-group">
        <label for="borrowId">borrowId = 0 </label>
        <input type="number" name="borrowId" class="form-control">
      </div>
      <input type="submit" value="Create Car">
    </form>
  </div>

  <div class = "users">
    <h2>USERS</h2>
    <!--  GET ALL USERS -->
    <form action="/users" method="GET" class="mb-4">
      <input type="submit" value="GET-ALL-USERS (Works)">
    </form>

    <!-- SHOW ALL USERS IN LIST-->
    <ul class="list-group">
      {{#each users}}
      <li class="list-group-item">id:{{this.id}} - name:{{this.name}} - borrowId:{{this.borrowId}}</li>
      {{/each}}
    </ul>
  </div>

  <div class = "travelLog">

    <!--  GET ALL TRAVELLOGS -->
    <h2>TRAVELLOGS</h2>

    <form action="/travelLogs" method="GET" class="mb-4">
      <input type="text" name="travelLogID" class="form-control">
      <input type="submit" value="GET-ALL-TRAVELLOGS (WORKS)">
    </form>

    <ul class="list-group">
      {{#each travelLogs}}
      <li class="list-group-item">Fahrtenbuch:{{this.id}} -- User:{{this.userId}} hat Auto:{{this.carId}} um
        {{this.endTime}} mit {{this.drivenKm}} gefahrenen Kilometer abgegeben</li>
      {{/each}}
    </ul>
  </div>

  <div class = "borrowLog">
    <h2>BORROWLOGS</h2>
    <!--  GET ALL TRAVELLOGS -->
    <form action="/borrowLogs" method="GET" href="/" class="mb-4">

      <input type="submit" value="GET-ALL-BORROWLOGS (WORKS)">
    </form>
    <ul class="list-group">
      {{#each borrowLogs}}
      <li class="list-group-item">Ausleihe:{{this.id}} -- User:{{this.userId}} hat Auto:{{this.carId}} um
        {{this.startTime}} ausgeliehen</li>
      {{/each}}
    </ul>

  </div>
</div>

<a id="updateButton" href="/" class="btn btn-light mt-4">Update All Lists</a>